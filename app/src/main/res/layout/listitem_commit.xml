<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/tvCommitInfo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:maxLines="5"
        android:padding="8dp"
        tools:text="@tools:sample/lorem/random"/>

    <TextView
        android:id="@+id/tvCommitAdded"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="2dp"
        app:layout_constraintTop_toBottomOf="@+id/tvCommitInfo"
        android:text="@string/tvCommitAdded"/>

    <TextView
        android:id="@+id/tvCommitDeleted"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="2dp"
        app:layout_constraintTop_toBottomOf="@+id/tvCommitAdded"
        android:text="@string/tvCommitDeleted"/>
</android.support.constraint.ConstraintLayout>